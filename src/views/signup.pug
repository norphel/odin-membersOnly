extends layout 

block content 

  main
    form(action="" method="POST")
      section
        label(for="firstName") First Name 
        span *
        input(id="firstName" name="firstName" type="text" required value=(firstName ? firstName : "") autofocus)
         
      section
        label(for="lastName") Last Name 
        span *
        input(id="lastName" name="lastName" type="text" required value=(lastName ? lastName : ""))

      section
        label(for="username") Email 
        span *
        input(id="username" name="username" type="email" required value=(username ? username : ""))

      section 
        label(for="password") Password 
        span *
        input(id="password" name="password" type="password" required)
        
      div
        button(type="submit" class="signup-button") Sign Up
        p Already have an account?
        a(href="/users/login") Log In